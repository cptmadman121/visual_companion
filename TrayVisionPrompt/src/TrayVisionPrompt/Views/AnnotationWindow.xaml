<Window x:Class="TrayVisionPrompt.Views.AnnotationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#66000000"
        Topmost="True"
        ShowInTaskbar="False"
        WindowState="Maximized"
        Cursor="Cross"
        Title="Annotation">
  <Grid>
    <Canvas x:Name="SelectionCanvas">
      <Rectangle x:Name="SelectionRectangle"
                 Stroke="Lime"
                 StrokeThickness="2"
                 Fill="#2200FF00"
                 Visibility="Collapsed" />
    </Canvas>
    <InkCanvas x:Name="AnnotationInk"
               Background="Transparent"
               EditingMode="Ink"
               DefaultDrawingAttributes="{x:Null}" />
    <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="0,0,0,40"
                Background="#88000000"
                Padding="12"
                CornerRadius="8">
      <Button Content="Bestätigen" Click="OnConfirm" />
      <Button Content="Zurücksetzen" Click="OnReset" />
      <Button Content="Abbrechen" Click="OnCancel" />
      <Button Content="Undo" Click="OnUndo" />
    </StackPanel>
  </Grid>
</Window>

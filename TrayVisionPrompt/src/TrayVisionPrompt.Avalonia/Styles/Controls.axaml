<Styles xmlns="https://github.com/avaloniaui">
  <Style Selector="Window">
    <Setter Property="Background" Value="{StaticResource BrushSurface}" />
  </Style>

  <Style Selector="TextBlock.h1">
    <Setter Property="FontSize" Value="22" />
    <Setter Property="FontWeight" Value="SemiBold" />
    <Setter Property="Foreground" Value="{StaticResource BrushOnSurface}" />
  </Style>
  <Style Selector="TextBlock.h2">
    <Setter Property="FontSize" Value="18" />
    <Setter Property="FontWeight" Value="SemiBold" />
    <Setter Property="Foreground" Value="{StaticResource BrushOnSurface}" />
  </Style>
  <Style Selector="TextBlock.caption">
    <Setter Property="FontSize" Value="12" />
    <Setter Property="Foreground" Value="{StaticResource BrushOnSurfaceDim}" />
  </Style>

  <Style Selector="Button">
    <Setter Property="CornerRadius" Value="8" />
    <Setter Property="Padding" Value="10,8" />
    <Setter Property="Background" Value="{StaticResource BrushSurfaceAlt}" />
    <Setter Property="Foreground" Value="{StaticResource BrushOnSurface}" />
    <Setter Property="BorderBrush" Value="#2A2A35" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="Transitions">
      <Transitions>
        <DoubleTransition Property="Opacity" Duration="0:0:0.12" />
      </Transitions>
    </Setter>
  </Style>

  <Style Selector="Button.primary">
    <Setter Property="Background" Value="{StaticResource BrushBrandPrimary}" />
    <Setter Property="BorderBrush" Value="{StaticResource BrushBrandPrimary}" />
  </Style>
  <Style Selector="Button:pressed">
    <Setter Property="Opacity" Value="0.9" />
  </Style>

  <Style Selector="Border.card">
    <Setter Property="Background" Value="{StaticResource BrushSurfaceAlt}" />
    <Setter Property="CornerRadius" Value="12" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="BorderBrush" Value="#2A2A35" />
    <Setter Property="Padding" Value="16" />
  </Style>

  <Style Selector="TextBox">
    <Setter Property="CornerRadius" Value="8" />
    <Setter Property="BorderBrush" Value="#2A2A35" />
    <Setter Property="Background" Value="#1D1D26" />
    <Setter Property="Foreground" Value="{StaticResource BrushOnSurface}" />
  </Style>
  <Style Selector="ComboBox">
    <Setter Property="CornerRadius" Value="8" />
    <Setter Property="BorderBrush" Value="#2A2A35" />
    <Setter Property="Background" Value="#1D1D26" />
    <Setter Property="Foreground" Value="{StaticResource BrushOnSurface}" />
  </Style>
  <Style Selector="CheckBox">
    <Setter Property="Foreground" Value="{StaticResource BrushOnSurface}" />
  </Style>

  <Style Selector="Control.tutorial-highlight">
    <Setter Property="Effect">
      <DropShadowEffect Color="#CC66C3FF" BlurRadius="28" Opacity="0.9" />
    </Setter>
    <Setter Property="Panel.ZIndex" Value="50" />
  </Style>
</Styles>

<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="TrayVisionPrompt.Avalonia.Views.TextPromptDialog"
        Width="480"
        Height="360"
        WindowStartupLocation="CenterOwner"
        Title="Prompt">
  <Grid RowDefinitions="Auto,*,Auto" Margin="16">
    <TextBlock Grid.Row="0" Text="Provide prompt text" Margin="0,0,0,8"/>
    <TextBox x:Name="InputBox"
             Grid.Row="1"
             AcceptsReturn="True"
             TextWrapping="Wrap"
             ScrollViewer.VerticalScrollBarVisibility="Auto"/>
    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
      <Button Content="OK" Width="100" Click="OnOk"/>
      <Button Content="Cancel" Width="100" Click="OnCancel"/>
    </StackPanel>
  </Grid>
</Window>

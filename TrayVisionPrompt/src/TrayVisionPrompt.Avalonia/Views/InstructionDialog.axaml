<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="TrayVisionPrompt.Avalonia.Views.InstructionDialog"
        Width="640" Height="480" Title="Instruction"
        WindowStartupLocation="CenterOwner">
  <Border Classes="card" Margin="16">
    <Grid RowDefinitions="Auto,*,Auto">
      <Border CornerRadius="8" Background="#101018" Padding="8">
        <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
          <Image x:Name="Thumbnail" Width="160" Height="100" Stretch="UniformToFill"/>
          <TextBlock Text="Selected area" Classes="caption" VerticalAlignment="Center"/>
        </StackPanel>
      </Border>
      <TextBox Grid.Row="1" x:Name="InstructionBox" AcceptsReturn="True" TextWrapping="Wrap" Watermark="Type instruction..."/>
      <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right" Margin="0,4,0,0">
        <Button Content="Cancel" Click="OnCancel"/>
        <Button Classes="primary" Content="OK" Click="OnOk"/>
      </StackPanel>
    </Grid>
  </Border>
</Window>
